<launch>
  <arg name="local" default="teb" />

  <!-- Launch move base -->
  <node
    name="move_base"
    pkg="pandora_move_base"
    type="pandora_move_base_node"
    respawn="false"
    output="screen">

    <rosparam
      file="$(find pandora_monstertruck_2dnav)/config/costmaps/costmap_common_params.yaml"
      command="load"
      ns="global_costmap" />

    <rosparam
      file="$(find pandora_monstertruck_2dnav)/config/costmaps/costmap_common_params.yaml"
      command="load"
      ns="local_costmap" />

    <rosparam
      file="$(find pandora_monstertruck_2dnav)/config/costmaps/local_costmap_params.yaml"
      command="load" />

    <rosparam
      file="$(find pandora_monstertruck_2dnav)/config/costmaps/global_costmap_params.yaml"
      command="load" />

    <rosparam
      file="$(find pandora_monstertruck_2dnav)/config/planners/base_global_planner_params.yaml"
      command="load" />

    <param
      name="SBPLLatticePlanner/primitive_filename"
      value="$(find pandora_monstertruck_2dnav)/motion_primitives/four_wheel_steer.mprim" />

    <rosparam
      file="$(find pandora_monstertruck_2dnav)/config/planners/$(arg local)_base_local_planner_params.yaml"
      command="load" />

    <rosparam
      file="$(find pandora_monstertruck_2dnav)/config/costmaps/costmap_converter_params.yaml"
      command="load" />

  </node>

  <node pkg="tf" type="static_transform_publisher" name="map2odom" args="0 0 0 0 0 0 map odom 100" />

</launch>
